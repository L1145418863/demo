<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wu.test.MainActivity">
    <LinearLayout
        android:id="@+id/linear_top"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#AEEEEE"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/settings"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_gravity="left|center_vertical"
            android:layout_weight="1"
            android:src="@drawable/setting" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="5"
            android:gravity="center" >

            <TextView
                android:id="@+id/text_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:text="我的音乐"
                android:textSize="20dp" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/play_mode"
            android:background="#AEEEEE"
            android:scaleType="fitCenter"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_gravity="right|center_vertical"
            android:layout_weight="1"
            android:src="@drawable/ordered" />
    </LinearLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/musicListView"
        android:layout_below="@+id/linear_top"
        android:layout_above="@+id/seeklay"></ListView>
    <TextView
        android:id="@+id/tv_list_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="当前没有音乐"
        android:gravity="center"
        android:textSize="25sp"
        android:textColor="#888888"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seeklay"
        android:background="#AEEEEE"
        android:layout_above="@+id/lay"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/time_play"
            android:paddingLeft="10dp"
            android:layout_gravity="center"
            android:text="00:00"
            />
    <SeekBar
        android:layout_width="200dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"
        android:maxHeight="5dp"
        android:minHeight="5dp"
        android:progressDrawable="@drawable/bg_seekbar"
        android:thumb="@drawable/thumb"
        android:thumbOffset="0dp"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/time_max"
            android:paddingRight="10dp"
            android:layout_gravity="center"
            android:text="00:00"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#AEEEEE"
        android:id="@+id/lay"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/music_info"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:id="@+id/new_name"
                android:ellipsize="marquee"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text="歌名"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:id="@+id/new_singer"
                android:text="歌手"/>

        </LinearLayout>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/music_pre"
            android:background="#AEEEEE"
            android:id="@+id/music_pre"
            />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#AEEEEE"
            android:layout_weight="1"
            android:src="@drawable/music_pause"
            android:id="@+id/music_play"
            />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:background="#AEEEEE"
            android:layout_weight="1"
            android:src="@drawable/music_next"
            android:id="@+id/music_next"
            />

    </LinearLayout>
</RelativeLayout>
